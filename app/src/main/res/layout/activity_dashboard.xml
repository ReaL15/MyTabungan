<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_rounded_homepage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_welcome"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/headerstabunganku"
            android:textAlignment="textStart"
            android:textColor="@color/mainColor"
            android:textSize="34sp"
            android:fontFamily="@font/montaga"
            app:layout_constraintBottom_toBottomOf="@+id/header"
            app:layout_constraintStart_toStartOf="@+id/header"
            app:layout_constraintTop_toTopOf="@+id/header"
            app:layout_constraintVertical_bias="0.326" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/header"
            app:layout_constraintEnd_toEndOf="@+id/header"
            app:layout_constraintStart_toEndOf="@+id/tv_welcome"
            app:layout_constraintTop_toTopOf="@+id/header"
            app:layout_constraintVertical_bias="0.34" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_menu"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/menu"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:fontFamily="@font/sauce_bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/scrollview1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"/>

        <HorizontalScrollView
            android:id="@+id/scrollview1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/bg_rounded_menu"
            app:flow_horizontalBias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- icon menu berlangsung -->

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon_menu_berlangsung"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/icon_berlangsung"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_ket_berlangsung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_berlangung"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/sauce_semibold"
                    app:layout_constraintEnd_toEndOf="@id/icon_menu_berlangsung"
                    app:layout_constraintStart_toStartOf="@id/icon_menu_berlangsung"
                    app:layout_constraintTop_toBottomOf="@id/icon_menu_berlangsung" />

                <!-- icon menu tercapai -->

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon_menu_tercapai"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/icon_tercapai"
                    app:layout_constraintStart_toEndOf="@id/icon_menu_berlangsung"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_ket_tercapai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_tercapai"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/sauce_semibold"
                    app:layout_constraintEnd_toEndOf="@id/icon_menu_tercapai"
                    app:layout_constraintStart_toStartOf="@id/icon_menu_tercapai"
                    app:layout_constraintTop_toBottomOf="@id/icon_menu_tercapai" />

                <!-- icon menu tambahkan -->

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon_menu_tambahkan"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/icon_tambahkan"
                    app:layout_constraintStart_toEndOf="@id/icon_menu_tercapai"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_ket_tambahkan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_tambahkan"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/sauce_semibold"
                    app:layout_constraintEnd_toEndOf="@id/icon_menu_tambahkan"
                    app:layout_constraintStart_toStartOf="@id/icon_menu_tambahkan"
                    app:layout_constraintTop_toBottomOf="@id/icon_menu_tambahkan" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_tabungan"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/tabungan"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:fontFamily="@font/sauce_bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/scrollview1"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:layout_width="270dp"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="21dp"
            app:layout_constraintStart_toEndOf="@id/title_menu"
            app:layout_constraintBottom_toTopOf="@id/scrollview1"
            app:layout_constraintTop_toBottomOf="@id/header"/>

        <View
            android:layout_width="225dp"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="21dp"
            app:layout_constraintStart_toEndOf="@id/title_tabungan"
            app:layout_constraintBottom_toTopOf="@id/recycler_view"
            app:layout_constraintTop_toBottomOf="@id/scrollview1"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/title_tabungan"
            app:layout_constraintLeft_toLeftOf="@id/title_tabungan"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


